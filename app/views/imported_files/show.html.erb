<%- model_class = ImportedFile -%>
<div class="page-header">
  <h1>Fichier importé : <%= @imported_file.name %></h1>
  <h2>Nombre de reservations enregistrées : <%= @imported_file.reservations.count %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:cle_reservation) %></th>
      <th><%= model_class.human_attribute_name(:email_client) %></th>
    </tr>
  </thead>
  <tbody>
    <% @imported_file.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.id %></td>
        <td><%= reservation.client.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
